    <div class="modal fade" id="loginFormModal" tabindex="-1" role="dialog" aria-labelledby="loginForm">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="loginForm">
                    <div class="mdl-card mdl-shadow--2dp">
                        <div class="mdl-card__title mdl-card--expand">
                            <div class="modal--logo">
                                @*<img src="@Url.Content("~/Contents/Themes/Images/logo.png")" alt="">*@
                                <img src="@Url.Content("~/Contents/Themes/Images/DI_LOGO_BLACK.png")" alt="">
                            </div>
                        </div>
                        <div class="mdl-card__supporting-text">
                            <form action="#" method="post" id="loginForm">
                                <div class="mdl-textfield mdl-js-textfield">
                                    <input class="mdl-textfield__input loginUsername" type="text" name="loginUsername" id="txtUserName" onblur="getUserProfile();" autocomplete="off" placeholder="UserName">
                                </div>
                                <div class="mdl-textfield mdl-js-textfield">
                                    @*@Html.PasswordFor(model => model.vLoginPass, new { @class = "mdl-textfield__input loginPassword", placeholder = "Password", id = "txtUserPassword", oncopy = "return false", onpaste = "return false" })*@

                                    <input type="text" id="txtUserPassword" name="password" placeholder="Password" autocomplete="off" class="mdl-textfield__input loginPassword" AutoCompleteType="Disabled" oncopy="return false" onpaste="return false" oncut="return false" />
                                </div>
                                <div class="mdl-textfield mdl-js-textfield">
                                    <select class="mdl-textfield__input Profile" name="Profile" id="ddlUserProfile"></select>
                                </div>
                                <div class="login__row" style="display:none">
                                    <Label ID="lblOtpmsg" style="color:red; font-size:12px; margin-top: -7px; display:none">OTP has been Sent on below Address.</Label><br />
                                    <Label ID="lblOtpEmailMsg" style="color:red; font-size:12px; margin-top: -12px; display:none"></Label><br />
                                    <Label ID="lblOtpSmsMsg" style="color:red; font-size:12px; margin-top: -11px; display:none"></Label>
                                </div>

                                <div class="login__row" style="display:none" id="dvotp">
                                    <input autocomplete="off" type="text" class="mdl-textfield__input loginUsername" placeholder="Enter OTP" id="OtpInput" />
                                    @*<p style="font-size: 15px; text-align:left; margin-top: 13px;">
                                        <span id="txttimer">Time left = </span><span id="timer"></span>
                                    </p>*@
                                </div>

                                <div class="login__row" style="display:none">
                                    @*<asp:LinkButton ID="lnkresendOTP" class="login__resendOtp" ToolTip="Resend Otp" Enabled="true" Text="Resend Otp" TabIndex="5"
                                        Style="text-decoration: none;display:none" >*@
                                    <input type="button" class="mdl-button" name="btn" value="Resend OTP" ID="lnkresendOTP" Style="text-decoration: none; font-size: 13px; color: red; float: right;display:none" />

                                    @*<p style="font-size: 15px; color: red; text-align:right;"> ReSend OTP</p>*@
                                    @*</asp:LinkButton>*@
                                </div>

                                <button class="login-form-submit-btn mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent btneffect btn btn-primary" id="btnLogin" type="button" style="display:none">
                                    <span class="num">
                                        <i class="fa fa-lock" style="line-height:45px;"></i>
                                    </span>
                                    Login
                                    <i class="faf fa fa-sign-in"></i>
                                </button>

                                <button class="login-form-submit-btn mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent btneffect btn btn-primary" id="btnOtpLogin" type="button">
                                    <span class="num">
                                        <i class="fa fa-lock" style="line-height:45px;"></i>
                                    </span>
                                    Login
                                    <i class="faf fa fa-sign-in"></i>
                                </button>

                                <button class="login-form-submit-btn mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent btneffect btn btn-primary" id="btnReLogin" type="button" style="display:none">
                                    <span class="num">
                                        <i class="fa fa-lock" style="line-height:45px;"></i>
                                    </span>
                                    Login
                                    <i class="faf fa fa-sign-in"></i>
                                </button>
                            </form>
                        </div>
                        <div class="mdl-card__actions mdl-card--border clearfix">
                            <div class="row">
                                <div class="col-md-8" onclick="CheckUsername();">
                                    <a href="#" id="btnForgotPwd" class="pull-left mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" data-toggle="modal" data-target="#forgotFormModal" data-dismiss="modal" style="pointer-events:none;">
                                        Forgot Password?
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="forgotFormModal" tabindex="-1" role="dialog" aria-labelledby="signupFormModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="forgotForm">
                    <div class="mdl-card mdl-shadow--2dp">
                        <div class="mdl-card__title mdl-card--expand">
                            <div class="modal--logo">
                                @*<img src="@Url.Content("~/Contents/Themes/Images/logo.png")" alt="">*@
