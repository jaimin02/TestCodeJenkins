                                    <br />
                                </div>
                                <button class="login-form-submit-btn mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent btneffect btn btn-primary" id="btnChangePwd" type="button" style="display:none">
                                    <span class="num">
                                        <i class="fa fa-lock" style="line-height:45px;"></i>
                                    </span>
                                    Login
                                    <i class="faf fa fa-sign-in"></i>
                                </button>
                            </form>
                        </div>
                        <div class="mdl-card__actions mdl-card--border clearfix">
                            <a href="#" class="pull-right mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect btnbacks" data-toggle="modal" data-target="#loginFormModal" data-dismiss="modal">
                                <img src="@Url.Content("~/Contents/Themes/Images/back.png")" alt="" style="margin-top:8px;">Back
                            </a>
                        </div>
